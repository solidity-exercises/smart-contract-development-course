{
    "files.autoSave": "afterDelay",
    "editor.detectIndentation": false,
	"editor.insertSpaces": false,
    "files.autoSaveDelay": 1000,
    "solidity.validationDelay": 1000,
    "solidity.soliumRules": {
        "extends": "solium:all",
        "plugins": [
            "security"
        ],
        "rules": {
            "quotes": [
                "error",
                "single"
            ],
            "indentation": [
                "error",
                "tab"
            ]
        }
    }
}